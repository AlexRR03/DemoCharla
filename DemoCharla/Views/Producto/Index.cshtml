@model IEnumerable<DemoCharla.Models.Producto>

@{
    ViewData["Title"] = "Index";
	List<Empresa> empresas = ViewData["Empresas"] as List<Empresa>;
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<hr />

@if (empresas != null && empresas.Any())
{
    <form asp-action="DeleteByEmpresa" method="post">
        <div class="form-group">
            <label>Seleccionar Empresa:</label>
            <select class="form-control" name="idEmpresa" id="idEmpresa">
                @foreach (var empresa in empresas)
                {
                    <option value="@empresa.Id">@empresa.Nombre</option>
                }
            </select>
        </div>
        <div class="col-md-2 mt-2">
            <button type="submit" class="btn btn-danger">Eliminar</button>
        </div>
    </form>
}
else
{
    <div class="alert alert-warning">No hay empresas registradas</div>
}

<hr />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cantidad)
            </th>
            <th>
                Nombre de la empresa
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cantidad)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Empresa.Nombre)
                </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
}
    </tbody>
</table>
